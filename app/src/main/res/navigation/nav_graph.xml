<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Authentication Flow -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.financemanagement.ui.auth.LoginFragment"
        android:label="fragment_login_new"
        tools:layout="@layout/fragment_login_new">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.financemanagement.ui.auth.RegisterFragment"
        android:label="fragment_register_new"
        tools:layout="@layout/fragment_register_new">
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Main App Screens with Bottom Navigation -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.financemanagement.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_homeAddExpenseFragment"
            app:destination="@id/homeAddExpenseFragment" />
    </fragment>

    <fragment
        android:id="@+id/reportsFragment"
        android:name="com.example.financemanagement.ui.reports.ReportsFragment"
        android:label="Reports"
        tools:layout="@layout/fragment_reports" />

    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.example.financemanagement.ui.accounts.AccountsFragment"
        android:label="Saving Goals"
        tools:layout="@layout/fragment_saving_goals">
        
        <action
            android:id="@+id/action_accountsFragment_to_goalDetailsFragment"
            app:destination="@id/goalDetailsFragment" />
            
    </fragment>
    
    <fragment
        android:id="@+id/goalDetailsFragment"
        android:name="com.example.financemanagement.ui.accounts.GoalDetailsFragment"
        android:label="Goal Details"
        tools:layout="@layout/fragment_goal_details">
        
        <argument
            android:name="goalId"
            app:argType="string" />
            
    </fragment>

    <fragment
        android:id="@+id/budgetFragment"
        android:name="com.example.financemanagement.ui.budget.BudgetFragment"
        android:label="Budget"
        tools:layout="@layout/fragment_budget" />

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.example.financemanagement.ui.inbox.InboxFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_inbox" />

    <!-- Legacy Dashboard (keep for now, can remove later) -->
    <fragment
        android:id="@+id/dashBoardFragment"
        android:name="com.example.financemanagement.ui.dashboard.DashboardFragment"
        android:label="fragment_dashboard_new"
        tools:layout="@layout/fragment_dashboard_new" />
    <fragment
        android:id="@+id/homeAddExpenseFragment"
        android:name="com.example.financemanagement.ui.home.HomeAddExpenseFragment"
        android:label="fragment_home_add_expense"
        tools:layout="@layout/fragment_home_add_expense" />

</navigation>
