<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#1AA66BFF" />
        </shape>
    </item>
    
    <!-- Card Layer -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/surface" />
        </shape>
    </item>
</layer-list>
